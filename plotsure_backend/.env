# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=plotsure_connect
DB_USER=plotsure_user
DB_PASSWORD=your_password

# For production, you might use a connection URL:
# DATABASE_URL=mysql://username:password@hostname:port/database_name

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=7d

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=PlotSure Connect <noreply@plotsureconnect.rw>

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=15
# 15 minutes
RATE_LIMIT_MAX=100
# Max 100 requests per window

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Upload directories
UPLOAD_DIR=uploads
DOCUMENTS_DIR=uploads/documents
IMAGES_DIR=uploads/images
VIDEOS_DIR=uploads/videos